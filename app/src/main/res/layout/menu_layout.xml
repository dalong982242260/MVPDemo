<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_bottom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/user_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/title_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/title_mingyan"
        android:textColor="@color/white_press"
        android:textSize="14sp" />

    <com.example.com.qqmenu.view.scrollview.ElasticScrollView
        android:layout_width="match_parent"
        android:id="@+id/elastic_scrollview"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.example.com.qqmenu.view.listview.ListViewForScrollView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:textColor="#ffffff" />
    </com.example.com.qqmenu.view.scrollview.ElasticScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/main_set1"
            android:gravity="center_vertical"
            android:text="设置"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_yejian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/main_set1"
            android:gravity="center_vertical"
            android:text="夜间"
            android:layout_marginLeft="15dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>